<mvc:View
    controllerName="ui5training.controller.Main"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    displayBlock="true"
    xmlns:core="sap.ui.core"
>
    <Page
        id="idPage"
        title="{i18n>appTitle}"
        class="customPageTitle">
        <subHeader>
            <OverflowToolbar>
                <ToolbarSpacer />
                <SearchField
                    liveChange=".onSearch"
                    width="20%" />
                <Button
                    text="{i18n>createButtonText}"
                    icon="sap-icon://create"
                    press=".onCreatePress"
                />
                <Button
                    text="{i18n>deleteButtonText}"
                    icon="sap-icon://delete"
                    press=".onDeletePress"
                />
            </OverflowToolbar>
        </subHeader>

        <Table
            id="idOrdersTable"
            class="sapUiResponsiveMargin"
            width="auto"
            inset="false"
            mode="MultiSelect"
            items="{/Orders}">

            <columns>
                <Column>
                    <Text text="{i18n>orderIdText}" />
                </Column>
                <Column>
                    <Text text="{i18n>customerNameText}" />
                </Column>
                <Column>
                    <Text text="{i18n>orderDateText}" />
                </Column>
                <Column>
                    <Text text="{i18n>freightText}" />
                </Column>
                <Column>
                    <Text text="{i18n>shipperText}" />
                </Column>
                <Column>
                    <Text text="{i18n>shipLocationText}" />
                </Column>
                <Column>
                    <Text text="{i18n>shippedDateText}" />
                </Column>
                <Column>
                    <Text text="{i18n>employeeText}" />
                </Column>
                <Column>
                    <Text text="{i18n>requiredDateText}" />
                </Column>
            </columns>

            <items>
                <ColumnListItem type="Navigation" press=".onOrderPress">
                    <cells>
                        <Text text=" {OrderID}" />
                        <Text text=" {Customer/CompanyName}" />
                        <Text
                            text=" {
                                path: 'OrderDate' ,
                                type: 'sap.ui.model.type.DateTime' ,
                                formatOptions: {
                                style: 'medium'
                            }}" />
                        <Text text=" {Freight}" />
                        <Text text=" {Shipper/CompanyName}" />
                        <Text text=" {ShipCity}, {ShipCountry}" />
                        <Text
                            text=" {
                                path: 'ShippedDate' ,
                                type: 'sap.ui.model.type.DateTime' ,
                                formatOptions: {
                                style: 'medium'
                            }}" />
                        <Text text=" {Employee/LastName}, {Employee/FirstName}" />
                        <Text
                            text=" {
                                path: 'RequiredDate' ,
                                type: 'sap.ui.model.type.DateTime' ,
                                formatOptions: {
                                style: 'medium'
                             }}" />
                    </cells>
                </ColumnListItem>
            </items>
        </Table>


    </Page>
</mvc:View>